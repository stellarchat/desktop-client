{
  "productName": "Foxlet",
  "artifactName": "foxlet-${version}.${ext}",
  "appId": "com.ripplefox.foxlet",
  "npmRebuild": true,
  "npmArgs": "--help",
  "buildDependenciesFromSource": true,
  "files": [
      "main.js",
      "package.json",
      "src/",
      "lib/",
      "build/"
  ],
  "mac": {
      "target": [ "zip" ],
      "category": "public.app-category.finance"
  },
  "linux": {
      "target": [ "deb" ],
      "executableName": "foxlet",
      "category": "Office",
      "icon": "./build"
  },
  "win": {
      "target": [ "nsis" ]
  },
  "nsis": {
      "oneClick": false,
      "perMachine": true
  },
  "directories": {
      "buildResources": "./build",
      "output": "./dist"
  },
  "electronDownload": {
      "cache": "~/.cache/electron-builder"
  }
}
